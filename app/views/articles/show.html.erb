<p id="notice"><%= notice %></p>
<div class="span12">
<h1><%= @article.headline %></h1>
 <%= @article.published_on %>

<b><%= @article.user_name %></b>
</div>

<div class="span4">
  <% if @article.picture_name!= "" %>
    <%= image_tag(@article.picture_name) %>
  <% else %>
    <img src="http://placehold.it/350x250"></img>
  <%end%>
</div>
<div class="span8">
<p><%= simple_format @article.deck %></p>
<p> <%= @article.story %> </p>

  <p>
    <b>Grade:</b>
    <%= @article.grade %>
  </p>

  <p>
   <%= @article.news_agency.name if @article.news_agency%>
  </p>

  <p><%= @article.get_category_names %></p>


<% if can? :update, @article %>
	<%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<%= link_to 'Back', articles_path %>
</div>