<%= form_for @article, :validate => true, :html => {:multipart => true}  do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @article.new_record? %>
    <div class="field">
      <%= f.label :published_on %><br />
      <%= f.date_select :published_on %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :headline %><br />
    <%= f.text_field :headline %>
  </div>
  <div class="field">
    <%= f.label :deck %><br />
    <%= f.text_field :deck %>
  </div>
  <div class="field">
    <%= f.label :story %><br />
    <%= f.text_field :story %>
  </div>


  <div class="field">
    <%= f.label :news_agency_id %><br />
    <%= f.collection_select :news_agency_id, NewsAgency.all, :id, :name, options: { include_blank: true, prompt: 'Select Person' } %>
  </div>

    <div class="field">
      <%= f.label :grade %><br />
      <%= f.text_field :grade %>
    </div>


  <%= render :partial => 'grades', :locals =>{:f => f} %>

  <div class="field">
    <%= f.fields_for :pictures do |f| %>
      <%= render "picture_fields", :f => f %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
