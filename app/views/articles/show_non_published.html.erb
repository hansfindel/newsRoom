<h1>NewsRoom</h1>
<% if @country %>
	<h2> Noticias por aceptar en <%= @country %></h2>
<% else %>
	<h2> Noticias por aceptar</h2>
<% end %>
<div class="row">
  <div class="span8 offset2">
    <% @articles.each do |article| %>
    <div class="well">
      <h3><%= link_to article.headline, article %></h3>
      <p><%= simple_format article.deck %></p>
    </div>
    <% end %>
  </div>
</div>
<% if @news %>
	<h2> Noticias por clasificar </h2>
	<div class="row">
	  <div class="span8 offset2">
	    <% @news.each do |news| %>
	    <div class="well">
	      <h3><%= link_to news.headline, news %></h3>
	      <p><%= simple_format news.deck %></p>
	    </div>
	    <% end %>
	  </div>
	</div>
<% end %>