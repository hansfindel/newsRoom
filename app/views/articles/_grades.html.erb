<% if current_role.include?("editor") and f.object.editors_grade == 0 %>
  <div class="field">
      <%= f.label :editors_grade %><br />
      <%= f.text_field :editors_grade %>
    </div>
<% elsif current_role.include?("chief_editor") and f.object.chief_editor_grade == 0 %>
  <div class="field">
      <%= f.label :chief_editor_grade %><br />
      <%= f.text_field :chief_editor_grade %>
    </div>
<% else #if current_role.include?("chief_editor_country") %>
  <div class="field">
      <%= f.label :chief_editor_country_grade %><br />
      <%= f.text_field :chief_editor_country_grade %>
    </div>
<% end %>